<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="boardMapper">
    <resultMap id="board" type="com.green.Board2.vo.BoardVO">
        <result column="BOARD_NUM"      property="boardNum"/>
        <result column="TITLE"          property="title"/>
        <result column="CONTENT"        property="content"/>
        <result column="WRITER"         property="writer"/>
        <result column="CREATE_DATE"    property="createDate"/>
        <result column="READ_CNT"       property="readCnt"/>
    </resultMap>

    <!--게시글 목록 조회-->
    <select id="selectBoardList" resultMap="board">
        SELECT BOARD_NUM
            ,TITLE
            ,WRITER
            ,CREATE_DATE
            ,READ_CNT
            FROM BOARD
<!--        쿼리 채우기 위해 가져온 객체.-->
<!--    searchValue->searchVO.getSearchValue(); , searchValue.equals->searchVO.getSearchValue.equals           -->
        <if test='searchValue != null and !searchValue.equals("")'>

            WHERE ${searchType} LIKE CONCAT('%', #{searchValue}, '%')
<!--            searchValue가 null이 아닐 때+빈값이 아닐 때만 쿼리가 실행-->
        </if>

        ORDER BY BOARD_NUM DESC
        LIMIT ${displayDataCnt} OFFSET ${displayDataCnt * (nowPage-1)}
<!--        searchVO.getDisplayDataCnt();-->

    </select>

    <!--게시글 상세 조회-->
    <select id="selectBoardDetail" resultMap="board">
        SELECT BOARD_NUM
            , TITLE
            , CONTENT
            , WRITER
            , CREATE_DATE
            , READ_CNT
        FROM BOARD
        WHERE BOARD_NUM = #{boardNum}
    </select>

    <!--게시글 등록-->
    <insert id="insertBoard">
        INSERT INTO BOARD (
            TITLE
            , CONTENT
            , WRITER
        ) VALUES (
            #{title}
            , #{content}
            , #{writer}
<!--        ' ' 붙어서 나옴 -->
        )
    </insert>

    <!--게시글 삭제-->
    <delete id="deleteBoard">
        DELETE FROM BOARD
        WHERE BOARD_NUM = #{boardNum}
    </delete>

    <!--게시글 수정-->
    <update id="updateBoard">
        UPDATE BOARD
        SET
            TITLE = #{title}
            , CONTENT = #{content}
        WHERE BOARD_NUM = #{boardNum}
<!--        컬럼값 넣을 때# / -->
    </update>

    <!--조회수 증가-->
    <update id="updateReadCnt">
        UPDATE BOARD
        SET
            READ_CNT = READ_CNT + 1
        WHERE BOARD_NUM = #{boardNum}
    </update>

<!--    int String 자료형 조회할 때는 resultType, 클래스 자료형은 resultMap-->
    <select id="selectBoardCnt" resultType="int">
        SELECT COUNT(BOARD_NUM)
        FROM BOARD
    </select>


</mapper>































